<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AutoHub.MVVM.Views.AddListingPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:AutoHub.MVVM.Models"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewModels="clr-namespace:AutoHub.MVVM.ViewModels"
    Title="Add Listing"
    x:DataType="viewModels:AddListingPageViewModel"
    HideSoftInputOnTapped="True">

    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <toolkit:IsNotNullConverter x:Key="IsNotNullConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Spacing="15">
            <Border BackgroundColor="#FBFAF9" StrokeThickness="0">
                <Grid
                    Padding="20"
                    ColumnDefinitions="Auto, *"
                    VerticalOptions="Center">
                    <HorizontalStackLayout Grid.Column="0">
                        <Image
                            Margin="10,0"
                            HeightRequest="30"
                            Source="logo"
                            WidthRequest="30" />
                        <Label
                            FontAttributes="Bold"
                            FontSize="20"
                            HorizontalTextAlignment="Start"
                            Text="AutoHub" />
                    </HorizontalStackLayout>
                </Grid>
            </Border>

            <VerticalStackLayout Margin="0,0,0,0" Padding="20">
                <Border
                    Margin="0,0,0,10"
                    Padding="10"
                    BackgroundColor="#E8E8E8"
                    HeightRequest="80"
                    StrokeShape="10"
                    StrokeThickness="0">
                    <VerticalStackLayout>
                        <Label
                            FontAttributes="Bold"
                            FontSize="25"
                            Text="Add New Listing" />
                        <Label FontSize="15" Text="Fill in the details about your vehicle" />
                    </VerticalStackLayout>
                </Border>

                <Border
                    BackgroundColor="#F8F8F7"
                    StrokeShape="10"
                    StrokeThickness="1">
                    <Entry
                        Keyboard="Text"
                        Placeholder="Title (e.g., Mercedes-Benz W124)"
                        Text="{Binding Title}" />
                </Border>
                <Label
                    Padding="5,5"
                    FontSize="10"
                    Text="- Required. Maximum 200 characters."
                    TextColor="{StaticResource ValidateGrayLabel}" />

                <Border
                    Margin="0,5"
                    BackgroundColor="#F8F8F7"
                    StrokeShape="10"
                    StrokeThickness="1">
                    <Entry
                        Keyboard="Text"
                        Placeholder="Subtitle (e.g., Automatic, RWD)"
                        Text="{Binding Subtitle}" />
                </Border>
                <Label
                    Padding="5,0"
                    FontSize="10"
                    Text="- Optional. Maximum 100 characters."
                    TextColor="{StaticResource ValidateGrayLabel}" />

                <Border
                    Margin="0,5"
                    BackgroundColor="#F8F8F7"
                    StrokeShape="10"
                    StrokeThickness="1">
                    <Entry
                        Keyboard="Numeric"
                        Placeholder="Year (e.g., 2020)"
                        Text="{Binding YearText}" />
                </Border>
                <Label
                    Padding="5,0"
                    FontSize="10"
                    Text="- Required. Year between 1900 and 2025."
                    TextColor="{StaticResource ValidateGrayLabel}" />

                <Border
                    Margin="0,5"
                    BackgroundColor="#F8F8F7"
                    StrokeShape="10"
                    StrokeThickness="1">
                    <Entry
                        Keyboard="Numeric"
                        Placeholder="Price (e.g., 32900)"
                        Text="{Binding PriceText}" />
                </Border>
                <Label
                    Padding="5,0"
                    FontSize="10"
                    Text="- Required. Price in your currency."
                    TextColor="{StaticResource ValidateGrayLabel}" />

                <Border
                    Margin="0,5"
                    BackgroundColor="#F8F8F7"
                    StrokeShape="10"
                    StrokeThickness="1">
                    <Entry
                        Keyboard="Numeric"
                        Placeholder="Mileage (e.g., 28000)"
                        Text="{Binding MileageText}" />
                </Border>
                <Label
                    Padding="5,0"
                    FontSize="10"
                    Text="- Required. Mileage in kilometers or miles."
                    TextColor="{StaticResource ValidateGrayLabel}" />

                <Border
                    Margin="0,5"
                    BackgroundColor="#F8F8F7"
                    StrokeShape="10"
                    StrokeThickness="1">
                    <Entry
                        Keyboard="Text"
                        Placeholder="Location (e.g., San Jose, CA)"
                        Text="{Binding Location}" />
                </Border>
                <Label
                    Padding="5,0"
                    FontSize="10"
                    Text="- Optional. Maximum 200 characters."
                    TextColor="{StaticResource ValidateGrayLabel}" />

                <Border
                    Margin="0,10"
                    Padding="15"
                    BackgroundColor="White"
                    StrokeShape="10"
                    StrokeThickness="0">
                    <VerticalStackLayout Spacing="10">

                        <Label
                            FontAttributes="Bold"
                            FontSize="18"
                            Text="Photos"
                            TextColor="{StaticResource Gray900}" />

                        <Grid ColumnDefinitions="*, *" ColumnSpacing="10">

                            <Border
                                Grid.Column="0"
                                Padding="15"
                                BackgroundColor="{StaticResource LightGreenBackground}"
                                StrokeShape="10"
                                StrokeThickness="0">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding TakePhotoCommand}" />
                                </Border.GestureRecognizers>
                                <VerticalStackLayout
                                    HorizontalOptions="Center"
                                    Spacing="8"
                                    VerticalOptions="Center">
                                    <Image
                                        HeightRequest="30"
                                        Source="camera_icon"
                                        WidthRequest="30" />
                                    <Label
                                        FontSize="12"
                                        HorizontalOptions="Center"
                                        Text="Camera"
                                        TextColor="{StaticResource Gray600}" />
                                </VerticalStackLayout>
                            </Border>


                            <Border
                                Grid.Column="1"
                                Padding="15"
                                BackgroundColor="{StaticResource LightGreenBackground}"
                                StrokeShape="10"
                                StrokeThickness="0">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding PickPhotoCommand}" />
                                </Border.GestureRecognizers>
                                <VerticalStackLayout
                                    HorizontalOptions="Center"
                                    Spacing="8"
                                    VerticalOptions="Center">
                                    <Image
                                        HeightRequest="30"
                                        Source="gallery_icon"
                                        WidthRequest="30" />
                                    <Label
                                        FontSize="12"
                                        HorizontalOptions="Center"
                                        Text="Gallery"
                                        TextColor="{StaticResource Gray600}" />
                                </VerticalStackLayout>
                            </Border>
                        </Grid>

                        <CollectionView
                            Margin="0,5,0,0"
                            ItemsSource="{Binding SelectedImages}"
                            SelectionMode="None"
                            HeightRequest="100">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout Orientation="Horizontal" ItemSpacing="8" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:PhotoItem">
                                    <Grid
                                        HeightRequest="100"
                                        WidthRequest="100">
                                        <Border
                                            Padding="0"
                                            BackgroundColor="Transparent"
                                            HeightRequest="100"
                                            Stroke="{StaticResource Gray300}"
                                            StrokeShape="RoundRectangle 8"
                                            StrokeThickness="1"
                                            WidthRequest="100">
                                            <Image
                                                Aspect="AspectFill"
                                                HeightRequest="100"
                                                Source="{Binding ImageSource}"
                                                WidthRequest="100" />
                                        </Border>
                                        <Border
                                            BackgroundColor="Transparent"
                                            HeightRequest="24"
                                            HorizontalOptions="End"
                                            Margin="-8,4,4,-8"
                                            Padding="0"
                                            StrokeThickness="0"
                                            VerticalOptions="Start"
                                            WidthRequest="24"
                                            ZIndex="10">
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer 
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:AddListingPageViewModel}}, Path=RemoveImageCommand}" 
                                                    CommandParameter="{Binding .}" />
                                            </Border.GestureRecognizers>
                                            <Label
                                                FontSize="16"
                                                HorizontalOptions="Center"
                                                Text="âœ•"
                                                TextColor="Black"
                                                VerticalOptions="Center" />
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <Label
                            Margin="0,5,0,0"
                            FontSize="12"
                            Text="First photo will be the cover image."
                            TextColor="{StaticResource Gray500}"
                            VerticalOptions="Start" />

                    </VerticalStackLayout>
                </Border>

                <Border
                    Margin="0,10"
                    BackgroundColor="#F8F8F7"
                    StrokeShape="10"
                    StrokeThickness="1">
                    <Editor
                        HeightRequest="120"
                        Placeholder="Description (optional)"
                        Text="{Binding Description}" />
                </Border>
                <Label
                    Padding="5,0"
                    FontSize="10"
                    Text="- Optional. Detailed description of the vehicle."
                    TextColor="{StaticResource ValidateGrayLabel}" />
                <Border
                    Margin="0,10"
                    Padding="15"
                    BackgroundColor="#F8F8F7"
                    StrokeShape="10"
                    StrokeThickness="1">
                    <HorizontalStackLayout Spacing="10">
                        <CheckBox IsChecked="{Binding IsElectric}" Color="{StaticResource ButtonGreen}" />
                        <Label
                            FontSize="14"
                            Text="Electric Vehicle"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>
                </Border>

                <Border
                    Margin="0,10"
                    StrokeShape="10"
                    StrokeThickness="1">
                    <Button
                        BackgroundColor="{StaticResource ButtonGreen}"
                        Command="{Binding AddListingCommand}"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"
                        Text="Add Listing" />
                </Border>

                <ActivityIndicator
                    HorizontalOptions="Center"
                    IsRunning="{Binding IsLoading}"
                    IsVisible="{Binding IsLoading}" />
                <Label
                    Padding="0,5"
                    HorizontalOptions="Center"
                    IsVisible="{Binding HasErrorMessage}"
                    Text="{Binding ErrorMessage}"
                    TextColor="Red" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
