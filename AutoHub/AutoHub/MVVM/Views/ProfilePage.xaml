<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AutoHub.MVVM.Views.ProfilePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewModels="clr-namespace:AutoHub.MVVM.ViewModels"
    x:DataType="viewModels:ProfilePageViewModel"
    BackgroundColor="#F0F2F5"
    HideSoftInputOnTapped="True">

    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <ActivityIndicator
            HeightRequest="50"
            HorizontalOptions="Center"
            IsRunning="{Binding IsLoading}"
            IsVisible="{Binding IsLoading}"
            VerticalOptions="Center"
            WidthRequest="50"
            ZIndex="1"
            Color="#00B09F" />

        <ScrollView IsVisible="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}">
            <VerticalStackLayout Padding="20" Spacing="20">

                <Label
                    Margin="0,10,0,0"
                    FontAttributes="Bold"
                    FontSize="24"
                    Text="Profile"
                    VerticalOptions="Center" />

                <Border
                    Padding="20"
                    BackgroundColor="White"
                    StrokeShape="15"
                    StrokeThickness="0">
                    <Grid ColumnDefinitions="Auto, *, Auto" ColumnSpacing="15">
                        <Border
                            Grid.Column="0"
                            HeightRequest="80"
                            StrokeShape="RoundRectangle 40"
                            StrokeThickness="0"
                            WidthRequest="80">
                            <Image Aspect="AspectFill" Source="{Binding ProfileImageUrl}" />
                        </Border>
                        <VerticalStackLayout
                            Grid.Column="1"
                            Spacing="5"
                            VerticalOptions="Center">
                            <Label
                                FontAttributes="Bold"
                                FontSize="20"
                                Text="{Binding UserName}" />
                            <Label
                                FontSize="14"
                                Text="{Binding JoinedDateText}"
                                TextColor="{StaticResource Gray600}" />
                        </VerticalStackLayout>
                        <Border
                            Grid.Column="2"
                            Padding="10"
                            BackgroundColor="Transparent"
                            StrokeThickness="0">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding EditProfileCommand}" />
                            </Border.GestureRecognizers>
                            <Label
                                FontSize="16"
                                Text="Edit"
                                TextColor="{StaticResource ButtonGreen}"
                                VerticalOptions="Center" />
                        </Border>
                    </Grid>
                </Border>

                <Grid ColumnDefinitions="*, *, *" ColumnSpacing="10">
                    <Border
                        Grid.Column="0"
                        Padding="15"
                        BackgroundColor="{StaticResource LightGreenBackground}"
                        StrokeShape="15"
                        StrokeThickness="0">
                        <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                            <Label
                                FontAttributes="Bold"
                                FontSize="24"
                                HorizontalOptions="Center"
                                Text="{Binding ActiveListingsCount}"
                                TextColor="{StaticResource ButtonGreen}" />
                            <Label
                                FontSize="12"
                                HorizontalOptions="Center"
                                Text="Active listings"
                                TextColor="{StaticResource Gray600}" />
                        </VerticalStackLayout>
                    </Border>

                    <Border
                        Grid.Column="1"
                        Padding="15"
                        BackgroundColor="{StaticResource LightGreenBackground}"
                        StrokeShape="15"
                        StrokeThickness="0">
                        <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                            <Label
                                FontAttributes="Bold"
                                FontSize="24"
                                HorizontalOptions="Center"
                                Text="{Binding FavoritesCount}"
                                TextColor="{StaticResource ButtonGreen}" />
                            <Label
                                FontSize="12"
                                HorizontalOptions="Center"
                                Text="Favorites"
                                TextColor="{StaticResource Gray600}" />
                        </VerticalStackLayout>
                    </Border>

                    <Border
                        Grid.Column="2"
                        Padding="15"
                        BackgroundColor="{StaticResource LightGreenBackground}"
                        StrokeShape="15"
                        StrokeThickness="0">
                        <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                            <Label
                                FontAttributes="Bold"
                                FontSize="24"
                                HorizontalOptions="Center"
                                Text="{Binding SoldCount}"
                                TextColor="{StaticResource ButtonGreen}" />
                            <Label
                                FontSize="12"
                                HorizontalOptions="Center"
                                Text="Sold"
                                TextColor="{StaticResource Gray600}" />
                        </VerticalStackLayout>
                    </Border>
                </Grid>


                <Label
                    Margin="0,10,0,0"
                    FontAttributes="Bold"
                    FontSize="18"
                    Text="Location" />

                <Border
                    Padding="15"
                    BackgroundColor="White"
                    StrokeShape="15"
                    StrokeThickness="0">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SelectLocationCommand}" />
                    </Border.GestureRecognizers>
                    <Grid ColumnDefinitions="*, Auto" ColumnSpacing="15">
                        <VerticalStackLayout Grid.Column="0" VerticalOptions="Center">
                            <Label
                                FontAttributes="Bold"
                                FontSize="16"
                                Text="My Location" />
                            <Label
                                FontSize="12"
                                Text="{Binding UserLocation}"
                                TextColor="{StaticResource Gray600}" />
                        </VerticalStackLayout>
                        <Label
                            Grid.Column="1"
                            FontSize="24"
                            Text="›"
                            TextColor="{StaticResource Gray600}"
                            VerticalOptions="Center" />
                    </Grid>
                </Border>

                <Label
                    Margin="0,10,0,0"
                    FontAttributes="Bold"
                    FontSize="18"
                    Text="Shortcuts" />

                <Border
                    Padding="15"
                    BackgroundColor="White"
                    StrokeShape="15"
                    StrokeThickness="0">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToFavoritesCommand}" />
                    </Border.GestureRecognizers>
                    <Grid ColumnDefinitions="*, Auto" ColumnSpacing="15">
                        <VerticalStackLayout Grid.Column="0" VerticalOptions="Center">
                            <Label
                                FontAttributes="Bold"
                                FontSize="16"
                                Text="Saved cars" />
                            <Label
                                FontSize="12"
                                Text="Your favorites and alerts"
                                TextColor="{StaticResource Gray600}" />
                        </VerticalStackLayout>
                        <Label
                            Grid.Column="1"
                            FontSize="24"
                            Text="›"
                            TextColor="{StaticResource Gray600}"
                            VerticalOptions="Center" />
                    </Grid>
                </Border>

                <Border
                    Padding="15"
                    BackgroundColor="White"
                    StrokeShape="15"
                    StrokeThickness="0">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToMyListingsCommand}" />
                    </Border.GestureRecognizers>
                    <Grid ColumnDefinitions="*, Auto" ColumnSpacing="15">
                        <VerticalStackLayout Grid.Column="0" VerticalOptions="Center">
                            <Label
                                FontAttributes="Bold"
                                FontSize="16"
                                Text="My listings" />
                            <Label
                                FontSize="12"
                                Text="Manage and edit cars"
                                TextColor="{StaticResource Gray600}" />
                        </VerticalStackLayout>
                        <Label
                            Grid.Column="1"
                            FontSize="24"
                            Text="›"
                            TextColor="{StaticResource Gray600}"
                            VerticalOptions="Center" />
                    </Grid>
                </Border>

                <Border
                    Padding="15"
                    BackgroundColor="White"
                    StrokeShape="15"
                    StrokeThickness="0">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToAddListingCommand}" />
                    </Border.GestureRecognizers>
                    <Grid ColumnDefinitions="*, Auto" ColumnSpacing="15">
                        <VerticalStackLayout Grid.Column="0" VerticalOptions="Center">
                            <Label
                                FontAttributes="Bold"
                                FontSize="16"
                                Text="Add a car" />
                            <Label
                                FontSize="12"
                                Text="Create a new listing"
                                TextColor="{StaticResource Gray600}" />
                        </VerticalStackLayout>
                        <Label
                            Grid.Column="1"
                            FontSize="24"
                            Text="›"
                            TextColor="{StaticResource Gray600}"
                            VerticalOptions="Center" />
                    </Grid>
                </Border>

                <Button
                    Margin="0,20,0,0"
                    Padding="15"
                    BackgroundColor="#FFE0E0"
                    Command="{Binding LogoutCommand}"
                    FontAttributes="Bold"
                    FontSize="16"
                    Text="Logout"
                    TextColor="Red" />


                <Label
                    Margin="0,10,0,0"
                    HorizontalOptions="Center"
                    IsVisible="{Binding HasErrorMessage}"
                    Text="{Binding ErrorMessage}"
                    TextColor="Red" />

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
