<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AutoHub.MVVM.Views.RegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:AutoHub.MVVM.ViewModels"
    x:DataType="viewModels:RegisterPageViewModel">
    <VerticalStackLayout Spacing="15">
        <Border BackgroundColor="#FBFAF9" StrokeThickness="0">
            <Grid
                Padding="20"
                ColumnDefinitions="Auto, *"
                VerticalOptions="Center">
                <HorizontalStackLayout Grid.Column="0">
                    <Image
                        Margin="10,0"
                        HeightRequest="30"
                        Source="logo.png"
                        WidthRequest="30" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="20"
                        HorizontalTextAlignment="Start"
                        Text="AutoHub" />
                </HorizontalStackLayout>
            </Grid>
        </Border>
        <VerticalStackLayout Margin="0,0,0,0" Padding="20">
            <Border
                Margin="0,0,0,10"
                Padding="10"
                BackgroundColor="#E8E8E8"
                HeightRequest="80"
                StrokeShape="10"
                StrokeThickness="0">
                <VerticalStackLayout>
                    <Label
                        FontAttributes="Bold"
                        FontSize="25"
                        Text="Create your account" />
                    <Label FontSize="15" Text="Use your email and phone number to get started" />
                </VerticalStackLayout>
            </Border>
            <Border
                BackgroundColor="#F8F8F7"
                StrokeShape="10"
                StrokeThickness="1">
                <Entry
                    Keyboard="Text"
                    Placeholder="Name"
                    Text="{Binding Name}" />
            </Border>
            <Border
                Margin="0,5"
                BackgroundColor="#F8F8F7"
                StrokeShape="10"
                StrokeThickness="1">
                <Entry
                    Keyboard="Email"
                    Placeholder="Email"
                    Text="{Binding Email}" />
            </Border>
            <Border
                Margin="0,5"
                BackgroundColor="#F8F8F7"
                StrokeShape="10"
                StrokeThickness="1">
                <Entry
                    Keyboard="Telephone"
                    Placeholder="Phone number"
                    Text="{Binding PhoneNumber}" />
            </Border>
            <Border
                Margin="0,5"
                BackgroundColor="#F8F8F7"
                StrokeShape="10"
                StrokeThickness="1">
                <Entry
                    IsPassword="True"
                    Keyboard="Password"
                    Placeholder="Password"
                    Text="{Binding Password}" />
            </Border>
            <Border
                Margin="0,5"
                BackgroundColor="#F8F8F7"
                StrokeShape="10"
                StrokeThickness="1">
                <Entry
                    IsPassword="True"
                    Keyboard="Password"
                    Placeholder="Confirm Password"
                    Text="{Binding ConfirmPassword}" />
            </Border>
            <Border
                Margin="0,10"
                Padding="10"
                BackgroundColor="#CCEFEB"
                StrokeShape="RoundRectangle 15"
                StrokeThickness="0">
                <Grid
                    ColumnDefinitions="Auto, *"
                    ColumnSpacing="10"
                    VerticalOptions="Center">
                    <Border
                        Grid.Column="0"
                        BackgroundColor="#CCEFEB"
                        HeightRequest="10"
                        StrokeShape="10"
                        StrokeThickness="0">
                        <Image Source="logo.png" />
                    </Border>
                    <VerticalStackLayout Grid.Column="1">
                        <Label
                            FontSize="12"
                            LineBreakMode="WordWrap"
                            Text="By continuing, you agree to the Terms"
                            TextColor="#00B09F"
                            VerticalTextAlignment="Center" />
                    </VerticalStackLayout>
                </Grid>
            </Border>
            <Border StrokeShape="10" StrokeThickness="1">
                <Button
                    x:Name="SignInButton"
                    BackgroundColor="#00B09F"
                    Command="{Binding CreateAccountCommand}"
                    Text="Create account" />
            </Border>
        </VerticalStackLayout>
    </VerticalStackLayout>

</ContentPage>