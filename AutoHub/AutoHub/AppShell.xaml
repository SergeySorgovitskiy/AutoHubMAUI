<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AutoHub.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AutoHub"
    xmlns:views="clr-namespace:AutoHub.MVVM.Views"
    Title="AutoHub"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarForegroundColor="#00B09F"
    Shell.TabBarTitleColor="#00B09F">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage"
        Shell.NavBarIsVisible="False" />

    <TabBar Route="MainApp">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:CatalogPage}"
            Icon="home_icon"
            Route="CatalogPage" />
        <ShellContent
            Title="Favorites"
            ContentTemplate="{DataTemplate views:FavoritePage}"
            Icon="favorite_icon"
            Route="FavoritePage" />
        <ShellContent
            Title="Add"
            ContentTemplate="{DataTemplate views:AddListingPage}"
            Icon="add_icon"
            Route="AddListingPage" />
        <ShellContent
            Title="Profile"
            ContentTemplate="{DataTemplate views:ProfilePage}"
            Icon="profile_icon"
            Route="ProfilePage" />
    </TabBar>

</Shell>
